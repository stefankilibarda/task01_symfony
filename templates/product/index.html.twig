<!DOCTYPE html>
<html>

    <head>

        <meta charset="UTF-8">
        <title></title>

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">        

    </head>

    <body>

        <div class="container mt-5">

            <button type="button" class="btn btn-success text-decoration-none mb-3"><a class="text-decoration-none text-white"href="{{ path('product-add-new') }}">Add new product</a></button>

            {% if products | length %}
                <table id="table_id" class="table table-striped table-hover text-center
                 mt-5">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Slug</th>
                            <th>Options</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for product in products %}
                        <tr>
                            <td>{{ product.id }}</td>
                            <td>{{ product.name }}</td>
                            <td>{{ product.price }} rsd</td>
                            <td>{{ product.slug }}</td>
                            <td><div class="row row-cols">
                                    <div class="col">
                                        <button class="btn btn-primary"><a class="text-decoration-none text-white" href="{{ path('product-edit-product', {'id': product.id}) }}">Edit</a></button>
                                        <button class="btn btn-danger"><a class="text-decoration-none text-white" href="{{ path('product-delete', {'id': product.id}) }}">Delete</a></button>
                                    </div>
                                </div></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <h4 class="text-center">No products!</h4>
            {% endif %}
        </div>
    </body>
        
        <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
        <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js"></script>

        <script type="text/javascript" charset="utf8" src="/DataTables/datatables.js"></script>
        <script>$(document).ready( function () {
            $('#table_id').DataTable();
        } );</script>


</html>
