<!DOCTYPE html>
<html>

    <head>

        <meta charset="UTF-8">
        <title></title>

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        
    </head>

    <body>

        <div class="container mt-5">

            {# <form action="{{ path('add-new') }}" method="POST">
                <input type="text" placeholder="Name" name="product_name">
                <input type="text" placeholder="Price" name="product_price">
                <input type="text" placeholder="Slug" name="product_slug">
                <button type="submit" name="add_new_btn">Add new</button>
            </form> #}
            <button type="button" class="btn btn-success text-decoration-none"><a class="text-decoration-none text-white"href="{{ path('product-add-new') }}">Add new product</a></button>

            {% if products | length %}
                <table class="table table-striped table-hover text-center
                 mt-5">
                    <tr>
                        <th>Id<th>
                        <th>Name<th>
                        <th>Price<th>
                        <th>Slug<th>
                        <th>Options<th>
                    </tr>
                    {% for product in products %}
                        <tr>
                            <td>{{ product.id }}<td>
                            <td>{{ product.name }}<td>
                            <td>{{ product.price }} rsd<td>
                            <td>{{ product.slug }}<td>
                            <td><button class="btn btn-warning"><a class="text-decoration-none text-white" href="{{ path('product-edit-product', {'id': product.id}) }}">Edit</a></button><button class="btn btn-danger"><a class="text-decoration-none text-white" href="{{ path('product-delete', {'id': product.id}) }}">Delete</a></button><td>
                        </tr>
                    {% endfor %}
                </table>
            {% else %}
                <h4 class="text-center">No products!</h4>
            {% endif %}
        </div>

    </body>

</html>
